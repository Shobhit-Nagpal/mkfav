---
const installCommand = "npm install -g mkfav";
const npxCommand = "npx mkfav --icon heart";

const copyToClipboard = `
function copyCommand(command, buttonId) {
    navigator.clipboard.writeText(command).then(() => {
        const button = document.getElementById(buttonId);
        const originalText = button.innerHTML;
        button.innerHTML = '✓ Copied!';
        button.classList.add('copied');
        setTimeout(() => {
            button.innerHTML = originalText;
            button.classList.remove('copied');
        }, 2000);
    });
}
`;

const usageExamples = [
    {
        title: "Basic usage",
        command: "mkfav --icon heart",
        description: "Creates icon.ico in current directory"
    },
    {
        title: "Custom filename",
        command: "mkfav --icon folder-git-2 --output favicon",
        description: "Outputs as favicon.ico"
    },
    {
        title: "Full path with extension",
        command: "mkfav --icon rocket --output my-site-favicon.ico",
        description: "Explicit filename with .ico extension"
    }
];

const options = [
    {
        flag: "--icon, -i",
        description: "Lucide icon name (kebab-case)",
        required: true
    },
    {
        flag: "--output, -o",
        description: "Output filename (optional, defaults to icon.ico)",
        required: false
    },
    {
        flag: "--version, -v",
        description: "Show version number",
        required: false
    },
    {
        flag: "--help, -h",
        description: "Show help",
        required: false
    }
];

const features = [
    "5000+ Lucide icons available",
    "Generates proper .ico format",
    "Zero configuration needed",
    "Custom output filenames",
    "Fast - converts in milliseconds",
    "Works globally or with npx"
];
